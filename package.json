{
  "name": "module-i18n",
  "version": "0.0.7",
  "description": "Module i18n",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf lib/*",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "prebuild": "npm run clean && npm run lint && npm run test:coverage",
    "build": "babel src --out-dir lib --ignore tests",
    "preversion": "npm run build",
    "postversion": "git push --follow-tags && yarn publish"
  },
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lttb/module-i18n.git"
  },
  "keywords": [
    "react",
    "component",
    "module",
    "i18n",
    "internationalization",
    "loader",
    "webpack",
    "module-i18n"
  ],
  "author": "Kenzhaev Artur",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lttb/module-i18n/issues"
  },
  "homepage": "https://github.com/lttb/module-i18n#readme",
  "dependencies": {
    "callsite": "^1.0.0",
    "js-yaml": "^3.7.0",
    "react": "^15.4.2",
    "recursive-readdir": "^2.1.0",
    "string-replace-async": "^1.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-async-to-promises": "^1.0.5",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-airbnb": "^2.1.1",
    "babel-preset-stage-2": "^6.22.0",
    "babel-root-import": "^4.1.5",
    "eslint": "^3.13.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "jest": "^18.1.0"
  },
  "jest": {
    "rootDir": "src"
  }
}
